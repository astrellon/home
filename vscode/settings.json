// Place your settings in this file to overwrite the default settings
{
    "editor.minimap.enabled": false,

    "editor.fontSize": 12,
    "editor.renderWhitespace": "none",
    "editor.lineNumbers": "relative",
    "editor.detectIndentation": false,
    "terminal.integrated.fontFamily": "'Liberation Mono for Powerline', 'Droid Sans Mono', 'monospace'",

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.meta":true
    },

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/*.meta": true
    },
    
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.leader": ",",
    "vim.useCtrlKeys": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<Space>"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["0"]
        },
        {
            "before": ["S"],
            "after": ["i", "<cr>", "<esc>", "<right>"]
        },
        {
            "before": ["<C-a>"],
            "after": ["<C-u>"]
        }
    ],
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-x>": false,
        "<C-v>": false
    },

    "window.zoomLevel": 0,
    "workbench.colorTheme": "Jellybeams",

    "extension-manager.extensions": [
        "vscodevim.vim",
        "Unity.unity-debug",
        "Tobiah.unity-tools",
        "ms-vscode.csharp",
        "gerane.Theme-Jellybeams"
    ],

    "editor.renderIndentGuides": false,

    "csharp.fallbackDebuggerLinuxRuntimeId": "ubuntu.16.04-x64",

    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": true,

    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": true,

    "terminal.integrated.shell.windows": "C:\\Windows\\Sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
    "vim.disableAnnoyingNeovimMessage": true,
    "extensions.ignoreRecommendations": true,
}
